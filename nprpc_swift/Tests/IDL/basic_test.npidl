// Simple test IDL for Swift bindings
module swift.test;

exception TestException {
    message: string;
    code: u32;
}

[force_helpers=1]
message Point {
    x: f32;
    y: f32;
}

[force_helpers=1]
message Rectangle {
    top_left: Point;
    width: f32;
    height: f32;
}

interface Calculator {
    u32 Add(a: in u32, b: in u32);
    u32 Multiply(a: in u32, b: in u32);
    void Divide(numerator: in u32, denominator: in u32, result: out f32) raises (TestException);
}

interface Geometry {
    f32 CalculateArea(rect: in Rectangle);
    void GetBounds(rect: in Rectangle, area: out f32, perimeter: out f32);
}
