# Example CMakeLists.txt for using NPRPC library
# This file shows how to use NPRPC in your own project

cmake_minimum_required(VERSION 3.15)
project(MyNPRPCApp VERSION 1.0.0 LANGUAGES CXX)

set(CMAKE_CXX_STANDARD 20)
set(CMAKE_CXX_STANDARD_REQUIRED ON)

# Option 1: Find installed NPRPC package
# Uncomment if you have NPRPC installed system-wide
# find_package(nprpc REQUIRED)

# Option 2: Use NPRPC as a subdirectory
# Uncomment if you have NPRPC as a subdirectory
# add_subdirectory(external/nprpc)

# Your application source files
add_executable(myapp
  main.cpp
)

# Link against NPRPC
target_link_libraries(myapp PRIVATE nprpc::nprpc)

